{
  "repository": "zeit/now-desktop",
  "scripts": {
    "start": "electron app/main",
    "postinstall": "install-app-deps",
    "dev": "next renderer",
    "clean": "chmod u+x dist && rm -rf node_modules app/node_modules dist app/dist",
    "build": "cross-env NODE_ENV=production next build",
    "lint": "xo",
    "precommit": "lint-staged",
    "test": "npm run dist && npm run lint && ava",
    "pack": "npm run build && build --dir",
    "dist": "npm run build && build"
  },
  "build": {
    "appId": "co.zeit.now",
    "asar": false,
    "win": {
      "target": [
        "squirrel"
      ],
      "icon": "app/assets/icons/single.ico"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "app/assets/icons/multi.icns"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "xo": {
    "extends": [
      "prettier",
      "prettier/react",
      "plugin:react/recommended"
    ],
    "env": [
      "browser",
      "node"
    ],
    "rules": {
      "import/no-extraneous-dependencies": 0,
      "import/no-unresolved": 0
    }
  },
  "license": "MIT",
  "devDependencies": {
    "ava": "0.18.2",
    "cross-env": "3.2.4",
    "electron": "1.6.2",
    "electron-builder": "16.2.0",
    "electron-builder-squirrel-windows": "16.0.0",
    "eslint-config-prettier": "1.5.0",
    "eslint-plugin-react": "6.10.3",
    "husky": "0.13.2",
    "lint-staged": "3.4.0",
    "next": "2.0.0-beta.39",
    "prettier": "0.22.0",
    "react": "15.4.2",
    "react-dom": "15.4.2",
    "react-input-autosize": "1.1.0",
    "react-slick": "0.14.7",
    "react-svg-inline": "1.2.0",
    "slick-carousel": "1.6.0",
    "spectron": "3.6.0",
    "webpack-node-externals": "1.5.4",
    "xo": "0.18.0"
  }
}
