{
  "name": "now-app",
  "version": "0.1.0",
  "scripts": {
    "start": "electron app/lib",
    "postinstall": "install-app-deps",
    "dev": "gulp",
    "build": "npm run build-gulp && npm run build-electron",
    "build-gulp": "gulp transpile",
    "build-electron": "electron-packager app --platform=darwin --arch=all --overwrite",
    "test": "ava && xo",
    "pack": "npm run build && build --dir"
  },
  "author": {
    "name": "Leo Lamprecht",
    "email": "leo@zeit.co"
  },
  "build": {
    "appId": "co.zeit.now",
    "category": "public.app-category.developer-tools"
  },
  "babel": {
    "plugins": [
      "transform-es2015-modules-commonjs",
      "transform-async-to-generator"
    ]
  },
  "xo": {
    "esnext": true,
    "space": true,
    "semicolon": false,
    "rules": {
      "import/no-extraneous-dependencies": 0,
      "ava/no-ignored-test-files": 0
    }
  },
  "ava": {
    "files": [
      "test/*.js"
    ]
  },
  "license": "MIT",
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-plugin-transform-async-to-generator": "^6.8.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.10.3",
    "babel-register": "^6.9.0",
    "electron-builder": "^5.25.1",
    "electron-prebuilt": "^1.3.3",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-cached": "^1.1.0",
    "xo": "^0.16.0"
  }
}
